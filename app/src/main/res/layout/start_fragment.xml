<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/g_logo_width"
        android:layout_height="@dimen/g_logo_hight"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/g_logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_Sign_in_With"
        android:layout_gravity="center_horizontal"
        android:text="@string/sign_in_with_google" />

    <ImageView
        android:id="@+id/imageViewAvatar"
        android:layout_width="@dimen/start_frag_avatar_width"
        android:layout_height="@dimen/start_frag_avatar_hight"
        android:layout_marginTop="@dimen/margin_top_avatar"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/start_frag_margin_top"
        android:textSize="@dimen/nick_text_size"
        tools:text="Tyler Durden"
        android:textColor="@color/material_on_surface_emphasis_medium"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/start_frag_margin_top"
        android:textSize="@dimen/email_text_size"
        tools:text="tyler_durden@gmail.com"
        android:textColor="@color/material_on_surface_emphasis_medium"
        android:layout_gravity="center_horizontal" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="@dimen/sign_in_button_width"
        android:layout_height="@dimen/sign_in_button_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_buttons_start_frag"
        android:backgroundTint="#90CAF9"
        android:textColor="@color/material_on_background_emphasis_high_type">
    </com.google.android.gms.common.SignInButton>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sign_out_button"
        android:layout_width="@dimen/width_buttonDeleteNote"
        android:layout_height="@dimen/start_frag_button_height"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_buttons_start_frag"
        android:text="@string/exit_text"
        android:alpha="0"
        tools:alpha="1"
        android:textColor="#575757" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_continue"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_buttons_start_frag"
        android:layout_width="@dimen/width_buttonDeleteNote"
        android:backgroundTint="#90CAF9"
        android:textColor="@color/material_on_background_emphasis_high_type"
        android:layout_height="@dimen/start_frag_button_height"
        android:alpha="0"
        tools:alpha="1"
        android:text="@string/continue_text"
        />

</LinearLayout>